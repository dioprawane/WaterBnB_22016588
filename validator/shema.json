{
    "$schema": "http://json-shema.org/draft-07/shema#",
    "$id": "1",
    "title": "Shema pour le JSON du regulateur de temp√©rature",
    "properties": {
        "status": {
            "type": "object",
            "properties": {
                "temperature":{"type":"number"},
                "light":{"type":"integer"},
                "regul":{"type":"string", "enum": ["WALK", "HALT"]},
                "fire":{"type":"boolean"},
                "heat":{"type":"string", "enum": ["ON", "OFF"]},
                "cold":{"type":"string", "enum": ["ON", "OFF"]},
                "fanspeed":{"type":"integer"}
            },
            "required": ["temperature","light","regul","fire","heat","cold","fanspeed"],
            "additionalProperties": false
        },
        "location": {
            "type": "object",
            "properties": {
                "room":{"type":"string"},
                "gps": {
                    "type": "object",
                    "properties": {
                        "lat":{"type": "string"},                        
                        "lon":{"type": "string"}
                    },
                    "required": ["lat","lon"],
                    "additionalProperties": false
                },
                "address":{"type": "string"}
            },
            "required": ["room","gps","address"],
            "additionalProperties": false
        },
        "regul": {
            "type": "object",
            "properties": {
                "lt":{"type": "integer"},
                "ht":{"type": "integer"}
            },
            "required": [ "lt", "ht" ],
            "additionalProperties": false
        },
        "info": {
            "type": "object",
            "properties": {
                "ident":{"type": "string"},
                "user":{"type": "string"},
                "loc":{"type": "string"}
            },
            "required": ["ident","user","loc"],
            "additionalProperties": false
        },
        "net": {
            "type": "object",
            "properties": {
                "uptime":{"type": "string"},
                "ssid":{"type": "string"},
                "mac":{"type": "string"},
                "ip":{"type": "string"}
            },
            "required": ["uptime","ssid","mac","ip"],
            "additionalProperties": false
        },
        "reporthost": {
            "type": "object",
            "properties": {
                "target_ip":{"type": "string"},
                "target_port":{"type": "integer"},
                "sp":{"type": "integer"}

            },
            "required": ["target_ip","target_port","sp"],
            "additionalProperties": false
        },
        "piscine":{
            "type": "object",
            "properties": {
                "hotspot":{"type": "boolean"},
                "occuped":{"type": "boolean"}
            },
            "required": ["hotspot","occuped"],
            "additionalProperties": false
        }
    },
    "required": ["status","location","regul","info","net","reporthost","piscine"],
    "additionalProperties": false
}